[Unit]
Description= erigon as a service
After=network.target

[Service]
User=geth
Group=geth
Environment=HOME=/home/erigon
Type=simple
Restart=always
RestartSec=30s
ExecStart=/home/erigon/erigon/build/bin/erigon
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure

[Install]
WantedBy=default.target
